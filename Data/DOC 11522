| rev9 = ''[[Uncut (magazine)|Uncut]]''
| rev9score = 4/5<ref name="uncut">{{cite web | url=http://www.uncut.co.uk/drive-by-truckers/patterson-hood-murdering-oscar-and-other-love-songs-review | title=Murdering Oscar (And Other Love Songs) Review | work=[[Uncut (magazine)|Uncut]]| accessdate=May 2, 2014 | author=Hughes, Rob}}</ref>
